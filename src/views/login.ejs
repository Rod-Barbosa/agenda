<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Login/Sign in</h1>
      <p class="text-center lead">Login or create your account</p>

      <div class="row my-3">


        <div class="col-lg">
          <h4 class="text-center">Login</h4>

          <p class="text-center">Already have an account?</p>

          <form action="/login/login" method="post">
            <input type="hidden" name="_csrf" value=<%= csrfToken%>>
            <div class="form-group my-3">
              <label>Email</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary my-3">Login</button>
          </form>

        </div>


        <div class="col-lg">
          <h4 class="text-center">Sign In</h4>
          <p class="text-center">Don't have an account yet?</p>

          <form action="/login/register" method="post">
            <input type="hidden" name="_csrf" value=<%= csrfToken%>>

            <div class="form-group my-3">
              <label>Email</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary my-3">Create account</button>
          </form>
        </div>



      </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>

